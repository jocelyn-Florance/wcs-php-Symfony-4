             <h5>Titre : <a href="{{ path('blog_show', { 'slug': article.title|replace({' ': '-'}) }) }}" >{{ article.title }}</a> </h5>
             <p>Id : {{ article.id }}</p>
             <p>Contenu : {{ article.content }}</p>
         </div>
         <hr>
     {% else %}
         Aucun article trouv√©.
     {% endfor %}

     <a href="{{ path('blog_index') }}">
