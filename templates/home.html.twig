{% extends 'base.html.twig' %}

 {% block body %}

     <h1>All categorie</h1>
     {% for category in categorys %}
         <div>
             <h2><a href="{{ path('blog_show_category', { 'name': category.name|replace({' ': '-'}) }) }}">  Category : {{ category.name }}</a></h2>
         </div>
     {% else %}
         Aucun article trouvé.
     {% endfor %}

     <h1>All articles from article s table : </h1>

     {% for article in articles %}
         <div>
             <h2><a href="{{ path('blog_show', { 'slug': article.title|replace({' ': '-'}) }) }}"> {{ loop.index }} / {{ article.title }} - Category : {{ article.categorys.name }}</a></h2>
             <p>{{ article.content }}</p>
         </div>
     {% else %}
         Aucun article trouvé.
     {% endfor %}
     <a href="{{ path('blog_index') }}">
         Back to homepage.
     </a>

 {% endblock %}
